<div class="container">  <div class="row">    <div class="text-center">      <h1>Select the service you are looking for !</h1>    </div>    <% @services.each do |service| %>    <div class="col-xs-12 col-sm-6 center">      <div class="card-service">        <div class="card-service-activity">          <h3> <%= service.activity %> </h3>        </div>        <div class="card-service-picto">          <%= image_tag "#{service.activity.downcase}.png" %>        </div>        <%= link_to '', service_path(service), class: "card-link" %>      </div>      <%= link_to 'See more', service_path(service) %>    </div>    <% end %>    <%= link_to 'Home', root_path %>  </div></div>