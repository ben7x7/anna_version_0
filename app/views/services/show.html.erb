<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="agency-card">

        <%= @service.activity %>
        <br>
        <p><%= @service.hourly_fee %> â‚¬ per hour</p>

        <%= @service.description  %>

      </div>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="book-form">
        <h3>Book this service !</h3>
        <%= simple_form_for([@service, @booking]) do |f| %>
          <%= f.input :date, as: :string, input_html: { class: 'datepicker' }%>
          <%= f.input :starting_time, as: :string, input_html: { class: 'timepicker' }%>
          <%= f.input :ending_time, as: :string, input_html: { class: 'timepicker' }%>
          <%= f.button :submit, class: 'btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

